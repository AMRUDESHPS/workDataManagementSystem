<section>
<h1 class="row justify-content-center">Employee Details</h1>

<div class="row mt-4">
    <div class="col d-flex justify-content-center">
        <a href="admin/add-product" class="btn btn-success">Add New Worker</a>
    </div>
</div>
<div class="container mt-5">
    <table class="table mt-5 border" id="productsTable">
        <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Employee ID</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Date of Birth</th>
              <th scope="col">Gender</th>
              <th scope="col">Contact Number</th>
              <th scope="col">Email</th>
              <th scope="col">Address</th>
              <th scope="col">Operation</th>
            </tr>
        </thead>
        <tbody>
            {{#each employees}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.employee_id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.date_of_birth}}</td>
                <td>{{this.gender}}</td>
                <td>{{this.contact_number}}</td>
                <td>{{this.email}}</td>
                <td>{{this.address}}</td>
                <td>
                    <a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="admin/delete-product/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    
</div>

</section>